<?xml version="1.0" encoding="UTF-8"?>
<project name="module_homs-server" default="compile.module.homs-server">
  <dirname property="module.homs-server.basedir" file="${ant.file.module_homs-server}"/>
  
  <property name="module.jdk.home.homs-server" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.homs-server" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.homs-server" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.homs-server" value="-encoding windows-1252 -source 1.7 ${compiler.args}"/>
  
  <property name="homs-server.output.dir" value="${module.homs-server.basedir}/bin"/>
  <property name="homs-server.testoutput.dir" value="${module.homs-server.basedir}/bin"/>
  
  <path id="homs-server.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="homs-server.module.production.classpath">
    <path refid="${module.jdk.classpath.homs-server}"/>
    <pathelement location="${basedir}/../../common/mysql_connector_java_5.1.35_bin.jar"/>
    <pathelement location="${basedir}/../../common/cis69mc.jar"/>
  </path>
  
  <path id="homs-server.runtime.production.module.classpath">
    <pathelement location="${homs-server.output.dir}"/>
    <pathelement location="${basedir}/../../common/mysql_connector_java_5.1.35_bin.jar"/>
    <pathelement location="${basedir}/../../common/cis69mc.jar"/>
  </path>
  
  <path id="homs-server.module.classpath">
    <pathelement location="${homs-server.output.dir}"/>
    <path refid="${module.jdk.classpath.homs-server}"/>
    <pathelement location="${basedir}/../../common/mysql_connector_java_5.1.35_bin.jar"/>
    <pathelement location="${basedir}/../../common/cis69mc.jar"/>
  </path>
  
  <path id="homs-server.runtime.module.classpath">
    <pathelement location="${homs-server.output.dir}"/>
    <pathelement location="${basedir}/../../common/mysql_connector_java_5.1.35_bin.jar"/>
    <pathelement location="${basedir}/../../common/cis69mc.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.homs-server">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.homs-server">
    <patternset refid="excluded.from.module.homs-server"/>
  </patternset>
  
  <path id="homs-server.module.sourcepath">
    <dirset dir="${module.homs-server.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.homs-server" depends="compile.module.homs-server.production,compile.module.homs-server.tests" description="Compile module HOMS-server"/>
  
  <target name="compile.module.homs-server.production" depends="register.custom.compilers" description="Compile module HOMS-server; production classes">
    <mkdir dir="${homs-server.output.dir}"/>
    <javac2 destdir="${homs-server.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.homs-server}/javac">
      <compilerarg line="${compiler.args.homs-server}"/>
      <bootclasspath refid="homs-server.module.bootclasspath"/>
      <classpath refid="homs-server.module.production.classpath"/>
      <src refid="homs-server.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.homs-server"/>
    </javac2>
    
    <copy todir="${homs-server.output.dir}">
      <fileset dir="${module.homs-server.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.homs-server.tests" depends="register.custom.compilers,compile.module.homs-server.production" description="compile module HOMS-server; test classes" unless="skip.tests"/>
  
  <target name="clean.module.homs-server" description="cleanup module">
    <delete dir="${homs-server.output.dir}"/>
    <delete dir="${homs-server.testoutput.dir}"/>
  </target>
</project>